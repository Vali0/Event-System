extends ../shared/layout

block main-content
    form(method="post")
        label(for="username") Username
        input(id="username" class="form-control" type="text" name="username" placeholder="Username")
        br
        label(for="firstName") First Name
        input(id="firstName" class="form-control" type="text" name="firstName" placeholder="First Name")
        br
        label(for="lastName") Last Name
        input(id="lastName" class="form-control" type="text" name="lastName" placeholder="Last Name")
        br
        label(for="email") Email
        input(id="email" class="form-control" type="text" name="email" placeholder="Email")
        br
        input(id = "add-initiative" type="button" value = "Add Initiative" )
        br
        select(id = "initiatives" name="initiatives")
            each initiative in initiatives
                option #{initiative}
        br
        br
        input(id = "add-seasons" type="button" value = "Add Seasons" )
        br
        select(id = "seasons" name = "seasons")
            each season in seasons
                option #{season}
        br
        br
        label(for="phoneNumber") Phone Number
        input(id="phoneNumber" class="form-control" type="text" name="phoneNumber" placeholder="Phone Number")
        br
        label(for="password") Password
        input(id="password" class="form-control" type="password" name="password" placeholder="Password")
        br
        label(for="confirm-password") Confirm Password
        input(id="confirm-password" class="form-control" type="password" name="confirmPassword" placeholder="Confirm password")
        br
        input(type="submit" class="btn btn-lg" value="Register")
block page-scripts
    script(src="js/addMoreInitiatives.js")
    script(src="js/addMoreSeasons.js")