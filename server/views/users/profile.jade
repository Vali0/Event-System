extends ../shared/layout
block main-content
    .container
        form
            label Username:
            label(id="username") #{currentUser.username}
            br
            label Phone Number:
            input(class="form-control" id="phoneNumber" name="phoneNumber")
            label Google Profile
            input(class="form-control" id="googleProfile" name="googleProfile")
            label GitHub Profile
            input(class="form-control" id="githubProfile" name="githubProfile")
            label Facebook Profile
            input(class="form-control" id="facebookProfile" name="facebookProfile")
            label LinkedIn Profile
            input(class="form-control" id="linkedInProfile" name="linkedInProfile")
            label Confirm password:
            input(id="password" class="form-control" )
            input(id="update-profile" class="btn btn-lg" value="Update")
block page-scripts
    script(src="js/updateUserInfo.js")
    script(src="js/httpRequester.js")